        @using (Html.BeginForm("TeacherLoginPage", "Index", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <h2>Teacher Login</h2>
                @Html.LabelFor(model => model.UserName)
