
@{
    ViewData["Title"] = "Index";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Online Course Main Page</title>
    <!-- Add Bootstrap CSS link -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/CSS/indexSheet.css">
    

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        .container {
            max-width: 800px;
            margin: 50px auto;
            text-align: center;
        }

        h1 {
            color: #333;
        }

        .button-container {
            display: flex;
            justify-content: space-around;
            margin-top: 30px;
        }

        .button {
            display: inline-block;
            padding: 15px 30px;
            font-size: 16px;
            text-align: center;
            text-decoration: none;
            background-color: #4CAF50;
            color: #fff;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .button:hover {
                background-color: #4CAF50;
        }

        /* New style for the background image */
        .background-image {
            height: 100vh;
        }

        #Home{
            background-color: #ff4d94;
            border-radius: 8px;
            padding: 10px;
            margin-right:20px;
            
        }

       #Login{
            background-color: #ff4d94;
            border-radius: 8px;
            padding: 10px;
        }

        
    </style>
</head>
<body>

    <!-- Bootstrap Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #99ebff">
        <a class="blink" href="https://localhost:7044/Index/Index"><h3>Online Courses</h3></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" style="color:#00e6e6" id="Home" href="#">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" style="color:#00e6e6" id="Login" href="#">Login <span class="sr-only">(current)</span></a>
                </li>
               @* <li class="nav-item">
                    <a class="nav-link" id="Student" href="#">Student</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="teacher" href="#">Teacher</a>
                </li>*@
            </ul>
        </div>
    </nav>

    <!-- Background Image -->
    <div class="background-image">
        <!-- Provide the correct path to your image -->
        <img src="~/Content/Image/image2.jpg" style="width: 100%; height: 100%;" alt="Background Image">
    </div>

    <!-- bootstrap footer -->
    <footer class="text-black text-center p-3 mt-0" style="background-color: #99ebff">
        <p>&copy; 2023 online courses. all rights reserved.</p>
    </footer>

    <!-- Bootstrap JS and Popper.js (required for Bootstrap components) -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <script>
        // Wrap your script in a document ready function
        $(document).ready(function () {
            $('#Home').click(function () {
                window.location.href = 'https://localhost:7044/Index/Index';
            });

            $('#Login').click(function () {
                window.location.href = 'https://localhost:7044/Index/AdminLog';
            });

            //$('#Student').click(function () {
            //    window.location.href = 'https://localhost:7044/Index/StudentLog';
            //});

            //$('#teacher').click(function () {
            //    window.location.href = 'https://localhost:7044/Index/TeacherLog';
            //});
        });
    </script>
</body>
</html>

