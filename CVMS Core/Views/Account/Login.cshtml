@model CVMSCore.BAL.Models.Master.VMUserDetail
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" href="~/favicon.ico" />
    <!-- Bootstrap CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Expletus+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>
    <div class="se-pre-con"></div>
    <div class="wraper-main wraper-login">
        <div class="wraper-login-inner">
            <a href="#" class="linkquest_text_logo">LINKQUEST TECHNOLOGIES</a>
            <div class="login-box">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "frmUser", @class = "login-form" }))
                {
                    <div class="form-group">
                        @Html.TextBox("UserName", null, new { @class = "form-control", placeholder = "UserName/Email", type = "text", @required = "true" })
                        <i class="fa fa-user-circle-o" aria-hidden="true"></i>
                    </div>
                    <div class="form-group">
                        @Html.TextBox("Password", null, new { @class = "form-control", placeholder = "Password", type = "password", @required = "true" })
                        <i class="fa fa-unlock" aria-hidden="true"></i>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btnBlack">Sign in</button>
                    </div>
                    <div class="form-group text-right">
                        <span class="text-danger" id="spanMessage">@ViewBag.ReturnMessage</span>
                        <a class="forgot-pswrd-lnk" href="~/Account/ChangePassword">Forgot your password ?</a>
                        @Html.ValidationSummary(true, null, new { @class = "text-danger" })
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="http://www.linkquestglobal.com/js/jquery-1.9.1.min.js"></script>
    <script src="~/content/js/account/account.js"></script>
</body>
</html>
